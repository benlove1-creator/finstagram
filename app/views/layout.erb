<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,700,300">
    <link rel="stylesheet" href="/stylesheets/lib.css">
    <link rel="stylesheet" href="/stylesheets/app.css">
    <title>Finstagram</title>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script>
      $(document).ready(function() {
          $("#photo_url").on("input", function(event) {
              var photo_url = $(this).val();

              var preview = $("#preview");
              if (photo_url) {
                  preview.attr("src", photo_url)
                  preview.show();
              } else {
                  preview.hide();
              }
          });
      });
  </script>
  </head>
   <body>
    <header>
       <h1>
    <a href="/">Finstagram</a>
  </h1>
      <div class="login-info">
        <% if current_user %>
          <%= current_user.username %>
          <a href="/logout">Logout</a>
        <% else %>
          <a href="/login">Login</a>
          <a href="/signup">Signup</a>
        <% end %>
      </div>
    </header>
    <main role="main">
      <%= yield %>
    </main>
  </body>
</html>